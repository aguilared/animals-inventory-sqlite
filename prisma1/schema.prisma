// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Contact {
  id String @id @default(cuid())
  firstname String
  lastname String
  email String
}

model User {
  id            Int       @unique
  name          String?
  email         String?   @unique
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  password      String?
  nivel         Int?
  animal        Animal[]
  @@map(name: "users")
}

model Animal {
  id             Int       @unique
  name           String?
  birthdate      String?
  owner          User?     @relation(fields: [owner_id], references: [id]) //fk
  owner_id       Int? 
  clase          Clase?    @relation(fields: [clase_id], references: [id]) //fk
  clase_id       Int?
  tipopart       String?
  hierro         String? 
  mother         String?
  mother_id      Int? 
  info           String?
  alive          String?
  created_at     DateTime  @default(now()) @map(name: "created_at")
  updated_at     DateTime  @updatedAt @map(name: "updated_at")
  @@map(name: "animals")
}

model Clase {
  id           Int       @unique
  description  String?
  created_at   DateTime  @default(now()) @map(name: "created_at")
  updated_at   DateTime  @updatedAt @map(name: "updated_at")
  animals      Animal[]  // A clases can have many animals
  @@map(name: "clases")
}